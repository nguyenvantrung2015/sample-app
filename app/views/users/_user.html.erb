<li>
  <%= gravatar_for user, size: Settings.gravatar_user_size %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to t("user.delete.delete"), user, method: :delete,
                  data: { confirm: t("user.delete.confirm") } %>
  <% end %>
</li>
